<Window x:Name="Currency_Convert" x:Class="Currency_Converter_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency_Converter_App"
        mc:Ignorable="d"
        Title="Currency Convert" Height="350" Width="290" FontSize="14">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="btnSignUp" Content="Sign Up" HorizontalAlignment="Left" Margin="94,90,0,0" VerticalAlignment="Top" Width="97" Height="33" Background="#FFDDDDDD" Click="BtnSignUp_Click" />
        <Button x:Name="btnSignIn" Content="Sign In" HorizontalAlignment="Left" Margin="94,150,0,0" VerticalAlignment="Top" Width="97" Height="33" Click="BtnSignIn_Click"/>
        <Label x:Name="lblExchange" Content="Currency Exchange" VerticalAlignment="Top" Width="282" Height="50" FontSize="24" FontFamily="Modern No. 20" Background="Blue" HorizontalAlignment="Left" HorizontalContentAlignment="Center"  />

    </Grid>
</Window>
